from rest_framework import serializers

from .models import StorageUser


class UserResponse(serializers.ModelSerializer):
    class Meta:
        model = StorageUser
        fields = ["id", "email", "name"]


class ListUsersResponse(serializers.ModelSerializer):
    class Meta:
        model = StorageUser
        fields = ["id", "email", "name"]


class CreateUserSerializer(serializers.ModelSerializer):
    class Meta:
        model = StorageUser
        fields = ["email", "name"]
